<% include ../layout/header %>
<link rel="stylesheet" href="/assets/css/register.css">

<div class="ui one column center aligned grid">
    <div class="column six wide form-holder">
        <h2 class="center aligned header form-head">Register</h2>
        <div class="ui form">
            <form action="/register" method="POST">

                <div class="field">
                    <input type="email" name="email" id="email" placeholder="email">
                </div>

                <div class="field">
                    <input type="text" name="nom" id="nom"  placeholder="nom">
                </div>

                <div class="field">
                    <input type="text" name="prenom" id="prenom"  placeholder="prenom">
                </div>

                <div class="field">
                    <input type="date" name="date_naissance" id="date_naissance"  placeholder="date de naissance">
                </div>

                <div class="field">
                    <input type="password" name="password" id="password"  placeholder="password">
                </div>

                <div class="field">
                    <input type="password" name="password_reload" id="password_reload"  placeholder="password">
                </div>

                <hr>
                <div class="field">
                    <input type="submit" value="Register" class="ui button large fluid green">
                </div>

            </form>
        </div>
    </div>
</div>


<% include ../layout/footer %>